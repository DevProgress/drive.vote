- container_class = 'container' if local_assigns[:container_class].nil?

%nav.navbar.navbar-default.navbar-static-top
  %div{class: container_class}

    .navbar-header{style: 'margin-top: 10px;'}
      %button.navbar-toggle.collapsed{:type=>"button", :'data-toggle'=>"collapse", :'data-target'=>"#navbar",  :'aria-expanded'=>"false", :'aria-controls'=>"navbar"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.navbar-brand{href: root_path(locale: I18n.locale.to_s), style: 'font-family: "Times New Roman", Times, serif'}
        %span.glyphicons.glyphicons-cars.inverse{'aria-hidden': "true", style: 'margin-top:-7px;'}

        %i.hidden-xs
          #{t(:drive_the_vote)}!

    #navbar.collapse.navbar-collapse
      .pull-right{style: 'margin-top: 10px;'}
        %a{href: '?locale=en', class: "locale-#{(locale.to_s == 'en') ? 'active' : 'inactive'}"}
          English

        &nbsp; &#183; &nbsp;
        %a{href: '?locale=es', class: "locale-#{(locale.to_s == 'es') ? 'active' : 'inactive'}"}
          Espa√±ol

        .btn.btn-info.btn-xs{style: 'margin: 5px 0 0 20px;'}
          = link_to t(:learn_more), about_path(locale: I18n.locale.to_s), style: 'color: white;'

        - if user_signed_in? && current_user.has_role?(:admin)

          %button.btn.btn-default.btn-xs.dropdown-toggle{type: 'button', 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false", style: 'margin: 5px 0 0 5px;'}
            %span.glyphicon.glyphicon-user.inverse{'aria-hidden': "true"}
            %span.caret.inverse

          %ul.dropdown-menu{style: 'margin: -10px 20px 0 0;'}
            %li= link_to t(:sign_out), destroy_user_session_path, {method: :delete}
            - if current_user.has_role? :admin
              %li= link_to 'admin', admin_path, style: 'color: red;'