:javascript
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: { maxZoom: 15 }, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers( #{raw @marker_hash.to_json} );
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });