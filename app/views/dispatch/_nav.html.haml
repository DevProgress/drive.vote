%h3.dispatch
  = @ride_zone.name

  %span.dispatch-links
    = @ride_zone.phone_number.phony_formatted(normalize: :US, spaces: '-')
    &nbsp; 路 &nbsp;

    = (action_name == 'show') ? "<b>Dashboard</b>".html_safe : link_to('Dashboard', dispatch_path(@ride_zone))
    &nbsp; 路 &nbsp;

    = (action_name == 'drivers') ? "<b>Drivers</b> (#{@driver_count})".html_safe : link_to("Drivers (#{@driver_count})", drivers_dispatch_path(@ride_zone))
    &nbsp; 路 &nbsp;

    = (action_name == 'map') ? "<b>Large Map</b>".html_safe : link_to('Large map', map_dispatch_path(@ride_zone))
    &nbsp; 路 &nbsp;

    = link_to 'Poll finder', 'http://yourfuckingpollingplace.com/', target: '_blank'