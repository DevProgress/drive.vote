.row
  - if user_signed_in?
    .col-sm-6.col-sm-offset-3
      = render partial: 'signed_in'

  - else
    .col-sm-6.col-sm-offset-3.text-center
      = render partial: 'signed_out'
  
.navbar.navbar-default.navbar-fixed-bottom
  .container
    .col-sm-12.text-center
      = link_to t(:learn_more), about_path(locale: I18n.locale.to_s), class: 'btn btn-xs btn-default', style: 'font-size: 12px;'