                %p.navbar-btn
                  = link_to t(:sign_in), user_facebook_omniauth_authorize_path, class: 'btn btn-default btn-xs', role: 'button', style: 'margin: 7px 0 0 10px;'
            
            - if user_signed_in?
            
              -# on larger screens, you want a dropdown
              %li.dropdown.hidden-xs
                %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
                  %span.glyphicon.glyphicon-user.inverse{'aria-hidden': "true"}
                  %span.caret.inverse
                  %ul.dropdown-menu{"aria-labelledby": "dropdownMenu1"}
                    %li= link_to t(:your_profile), current_user
                    %li= link_to t(:your_settings), "javascript:alert('coming soon');"
                    %li= link_to t(:sign_out), destroy_user_session_path, {:method => :delete, onclick: 'FB.logout();'}
                    
              -# on smaller screens, when you've got a burger, you don't
              %li.visible-xs.hidden-sm.hidden-md.hidden-lg
                = link_to t(:your_profile), current_user
              %li.visible-xs.hidden-sm.hidden-md.hidden-lg
                = link_to t(:your_settings), "javascript:alert('coming soon');"
              %li.visible-xs.hidden-sm.hidden-md.hidden-lg
                = link_to t(:sign_out), destroy_user_session_path, {:method => :delete, onclick: 'FB.logout();'}
    
                    
