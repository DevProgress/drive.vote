%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf8'}
    %title ðŸš• the Vote
    = csrf_meta_tags
    = action_cable_meta_tag
    
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "mobile-web-app-capable", content: "yes" }
    
    %meta{ name: 'description', content: 'Drive the Vote matches people who need rides to their polling place with volunteer drivers who want to take them there. No car should not mean no vote.' }
    %meta{ name: 'author', content: 'John McGrath' }
    
    %meta{ property: 'og:type', content: "website" }
    %meta{ property: 'og:title', :content => 'Drive the Vote!' }
    %meta{ property: 'og:site_name', :content => 'Drive the Vote!' }
    %meta{ property: 'og:url', :content => 'https://www.drive.vote' }
    %meta{ property: 'og:description', :content => 'Drive the Vote matches people who need a ride to their polling place with volunteer drivers, and provides information about voting places, dates, and rules.' }
    %meta{ property:'og:image', :content => 'https://www.drive.vote/drive_the_vote.png' }
    
    %link{:href => 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', :rel => 'stylesheet'}
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/flat-ui/2.3.0/css/flat-ui.min.css", :rel => "stylesheet"}
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css", rel: "stylesheet"}
