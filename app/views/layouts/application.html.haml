!!! html
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf8'}
    %title ðŸš• the Vote
    = csrf_meta_tags
    
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ name: 'description', content: 'Drive the Vote matches people who need rides to their polling place with volunteer drivers who want to take them there. No car should not mean no vote.' }
    %meta{ name: 'author', content: 'John McGrath' }
    
    %meta{ property: 'og:type', content: "website" }
    %meta{ property: 'og:title', :content => 'Drive the Vote!' }
    %meta{ property: 'og:site_name', :content => 'Drive the Vote!' }
    %meta{ property: 'og:url', :content => 'https://www.drive.vote' }
    %meta{ property: 'og:description', :content => 'Drive the Vote matches people who need a ride to their polling place with volunteer drivers, and provides information about voting places, dates, and rules.' }
    %meta{ property:'og:image', :content => 'https://www.drive.vote/drive_the_vote.png' }
    
    %link{:href => 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', :rel => 'stylesheet'}
    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css"}
    
    :css
      .inverse, .inverse a { color: #9d9d9d; }
      .faq { margin-top: 10px; }
      /* footer { border-top: 1px solid #ddd; margin: 30px 20px 15px 20px; } */
      .shares { border: 0px solid green; margin-top: 15px; margin-left: 50%; opacity: 0.6;}
      
      /* Sticky footer styles
      -------------------------------------------------- */
      html {
        position: relative;
        min-height: 100%;
      }
      body {
        /* Margin bottom by footer height */
        margin-bottom: 60px;
      }
      .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        /* Set the fixed height of the footer here */
        height: 50px;
        background-color: #f5f5f5;
      }
    
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    
  %body
