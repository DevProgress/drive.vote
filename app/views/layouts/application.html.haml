    }(document, 'script', 'facebook-jssdk'));</script>
    
    %nav.navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{:type=>"button", :'data-toggle'=>"collapse", :'data-target'=>"#navbar",  :'aria-expanded'=>"false", :'aria-controls'=>"navbar"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            
          %a.navbar-brand{href: "/", style: 'color: white; font-family: "Times New Roman", Times, serif'}
            %span.glyphicons.glyphicons-cars.inverse{'aria-hidden': "true", style: 'margin-top:-5px;'}
            %i
              #{t(:drive_the_vote)}!
        
        #navbar.collapse.navbar-collapse
                
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "EspaÃ±ol", :locale=>'es'
            %li= link_to "English", :locale=>'en'
            - unless user_signed_in?
              %li
                %p.navbar-btn
                  = link_to t(:sign_in), user_facebook_omniauth_authorize_path, class: 'btn btn-default btn-xs', role: 'button', style: 'margin: 7px 0 0 10px;'
            
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
                  %span.glyphicon.glyphicon-user.inverse{'aria-hidden': "true"}
                  %span.caret.inverse
                  %ul.dropdown-menu{"aria-labelledby": "dropdownMenu1"}
                    
                    %li= link_to t(:your_profile), current_user
                    %li= link_to t(:your_settings), "javascript:alert('coming soon');"
                        
                    %li= link_to t(:sign_out), destroy_user_session_path, :method => :delete
                    
    .container
      = yield
    
    %footer.footer.center-block
    
      .container
        .col-sm-8.col-sm-offset-2.text-center{ style: 'border: 0px dotted blue;'}
          %table.shares
            %tr
              %td{style: 'padding-right: 5px;'}
                <div class="fb-share-button" data-href="https://www.drive.vote" data-layout="button" data-size="small" data-mobile-iframe="true" style="margin-left: -80px;"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.drive.vote%2F&amp;src=sdkpreparse">Share</a></div>
                
              %td{style: 'padding: 5px 0 0 5px; opacity: 0.6;'}
