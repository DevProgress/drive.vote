    :css
      .faq { margin-top: 10px; }
      .shares { width: 260px; border: 0px solid green; opacity: 0.6; font-size: 13px; margin: 0 auto;}
      
      nav
      .navbar { background-color: white; border: 0; box-shadow: none !important }
      .navbar-default { background-color: white; border: 0; box-shadow: none !important }
      .navbar-static-top { background-color: white; border: 0; box-shadow: none !important }
    
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    
