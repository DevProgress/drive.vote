:css
  .field-name { text-align: right; padding: 0 20px 5px 0; color: #999; }
  .info { text-align: right; padding: 0 0 5px 0; color: #999; text-align: left; color: #222;}

%table.table
  %tr
    %td
      %table
        %tr
          %td.field-name
            From:
          %td.info
            = @message.from.phony_formatted(normalize: :US, spaces: '-')
        %tr
          %td.field-name
            Message:
          %td.info
            = @message.body
        %tr
          %td.field-name
            Status:
          %td.info

            = form_for [:admin, @message] do |f|
              - if @message.errors.any?
                #error_explanation
                  %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
                  %ul
                    - @message.errors.full_messages.each do |msg|
                      %li= msg



            = @message.status
