= render 'admin/nav', {active: 'users'}

%h1
  = @user.name
  - if current_user.has_role?(:admin)
    &nbsp;
    %small
      = link_to 'Edit', edit_admin_user_path(current_user), class: 'btn btn-default'

- if @user.description.present?
  %p
    %b
      Description:
    %div
      = @user.description

%p
  %b
    Admin?: <b>#{@user.has_role?(:admin)}</b>

%p
  Dispatcher for Zones:
  %ul
    - if @dispatching_for.present?
      - zones.each do |rz|
        %li
          = rz.name
    - else
      %li
        %i
          None


%p
  Driving for Zones:
  %ul
    - if @driving_for.present?
      - zones.each do |rz|
        %li
          = rz.name
    - else
      %li
        %i
          None